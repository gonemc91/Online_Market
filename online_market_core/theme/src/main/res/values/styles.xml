<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.OnlineMarketCore" parent="Theme.Material3.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/element_pink</item>
        <item name="android:background">@color/background_white</item>
        <item name="android:statusBarColor">@color/background_white</item>
        <item name="toolbarStyle">@style/custom_toolbar</item>
        <item name="buttonStyle">@style/AppButtonStyle</item>

    </style>


    <style name="custom_toolbar" parent="@style/Widget.MaterialComponents.Toolbar">
        <item name="titleTextStyle">@style/List_Title_1</item>
    </style>


    <style name="MaterialAlertDialog">
        <item name="buttonBarPositiveButtonStyle">@style/GlobalButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/GlobalButtonStyle</item>
        <item name="cornerRadius">10dp</item>
    </style>



    <style name="GlobalButtonStyle">
        <item name="cardCornerRadius">8dp</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:backgroundTint">@color/element_pink</item>
        <item name="minHeight">51dp</item>
    </style>


    <style name="AppButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/text_white</item>
        <item name="android:backgroundTint">@color/element_pink</item>
        <item name="minHeight">51dp</item>
        <item name="android:background">@drawable/background_shape_button</item>
        <item name="android:textAppearance">@style/Button_text_2</item>
    </style>



    <style name="Large_Title">
        <item name="android:textSize">20sp</item>
        <item name="android:lines">1</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/sfprodisplaybold</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textStyle">normal</item>

    </style>


    <style name="List_Title_1">
        <item name="android:textSize">16sp</item>
        <item name="android:lines">1</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/sfprodisplaybold</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textStyle">normal</item>

    </style>


    <style name="List_Title_2">
        <item name="android:textSize">14sp</item>
        <item name="android:lines">1</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/sfprodisplaymedium</item>
        <item name="android:textColor">@color/text_black</item>
    </style>


    <style name="List_Title_3">
        <item name="android:textSize">12sp</item>
        <item name="android:lines">1</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/sfprodisplaymedium</item>
        <item name="android:textColor">@color/text_black</item>
    </style>

    <style name="Caption_1">
        <item name="android:textSize">10sp</item>
        <item name="android:gravity">start</item>
        <item name="fontFamily">@font/sfprodisplayregular</item>
        <item name="android:textColor">@color/text_black</item>
    </style>


    <style name="Text_1">
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">start</item>
        <item name="fontFamily">@font/sfprodisplayregular</item>
        <item name="android:textColor">@color/text_black</item>
    </style>


    <style name="Caption_2">
        <item name="android:textSize">10sp</item>
        <item name="android:lines">1</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/sfprodisplayregular</item>
        <item name="android:textColor">@color/text_grey</item>
    </style>




    <style name="Element_text">
        <item name="android:textSize">9sp</item>
        <item name="android:lines">1</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/sfprodisplayregular</item>
        <item name="android:textColor">@color/text_grey</item>
        <item name="android:textAllCaps">true</item>
    </style>


    <style name="Button_text_1">
        <item name="android:textSize">12sp</item>
        <item name="android:lines">1</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/sfprodisplaymedium</item>
        <item name="android:textColor">@color/text_grey</item>
    </style>


    <style name="Button_text_2">
        <item name="android:textSize">14sp</item>
        <item name="android:lines">1</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/sfprodisplaymedium</item>
        <item name="android:textColor">@color/text_grey</item>
    </style>



    <style name="Placeholder_text">
        <item name="android:textSize">16sp</item>
        <item name="android:lines">1</item>
        <item name="fontFamily">@font/sfprodisplayregular</item>
        <item name="android:textColor">@color/text_black</item>
    </style>


    <style name="Price_text">
        <item name="android:textSize">14sp</item>
        <item name="android:lines">1</item>
        <item name="fontFamily">@font/sfprodisplaymedium</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textAllCaps">true</item>
    </style>




    <style name="ClickableIcon">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
    </style>








    <style name="ListItemDescription">
        <item name="android:textSize">15sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="ListItemPrice">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
    </style>

    <style name="ClickableIcon1">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
    </style>


    <style name="ProfileValueTextView" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
    </style>



    <style name="ProfileHintTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>


    <style name="CardView">
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>







</resources>